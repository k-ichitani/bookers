<html>
  <body>
    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <td><%== book.title %></td>
      <td><%== book.body %></td>

      <td><%= link_to "Show", books_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>


    </table>

    <% end %>

    <h2>New book</h2>
    <%= form_with model: @Book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>

      <p>Body</p>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>

    <% end %>
  </body>
</html>
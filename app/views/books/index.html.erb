<h1>Books</h1>

<% @books.each do |book| %>

<table>
  <thead>
    <p>Title</p>
    <span><%== book.title %></span>

    <p>Body</p>
    <span><%== book.body %></span>
  </thead>

    <span>
      <%= link_to book.title, book_path(book.id) %>
    </span>

</table>

<%= link_to "Show", books_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>

